extends ./layouts/base 

block append title 
	title Vittorio Zaccaria â€” Blog posts

block content
	div(block='posts')
		each p in filteredPosts 
			a(block='post-preview', href='#{p.link}', style="cursor: pointer")
				div(elem='title') #{p.title}
				div(elem='subtitle') 

					div(elem='date') 
						i.fa.fa-calendar-o 
						div(elem='date-value') #{p.formattedDate}


					div(elem='category') 
						i.fa.fa-flag-o 
						div(elem='category-value') #{p.category}

					div(block='tags') 
						i.fa.fa-tags
						each t in p.tags
							div(elem='tag') #{t}

				div(elem='description')
					img(elem='image', src="#{p.og_image}")
					div(elem='description-text') #{p.description}

				.posts_container__post__description-mobile
					.posts_container__post__description-mobile__title #{p.title}
					.posts_container__post__description-mobile__small_date #{p.smallDate}
					.posts_container__post__description-mobile__small_description #{p.smallDescription}


