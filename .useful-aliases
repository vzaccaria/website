
echo "Setting up website aliases"
echo ""
echo "* lfind:          local find in source files"
echo "* watch:  	launch server"
echo "* reload:   	compile and reload on post change"
echo ""

alias lfind='ack \
--ignore-dir=_site \
--ignore-dir=bower_components \
--ignore-dir=node_modules \
--ignore-dir=.build'

alias watch='./makefile.ls -- -w -r &'
alias reload='watchman posts make &'

